@{
  ViewBag.Title = "Acquisitions";
}

<h2>Acquisitions</h2>

<p>
  @Html.ActionLink("Create", "Create", null, new { id = "acquisitions_create" })
</p>

<div>
  <p>Acquisitions</p>
  <table id="acquisitions" class="jtable">
    <thead>
      <tr>
        <th>Company Name</th>
        <th>Date</th>
        <th>Total Value</th>
      </tr>
    </thead>
    <tbody data-bind="foreach: acquisitions">
      <tr data-bind="attr: { 'data-id' : Id }">
        <td data-bind="text: CompanyName"></td>
        <td data-bind="text: Date" class="date"></td>
        <td data-bind="text: Value" class="number"></td>
      </tr>
    </tbody>
  </table>
</div>

<div>
  <p>Items for <span id="acquisitionId"></span></p>
  <table id="acquisition_items" class="jtable">
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody data-bind="foreach: acquisitionItems">
      <tr>
        <td data-bind="text: ProductName"></td>
        <td data-bind="text: Quantity" class="number"></td>
        <td data-bind="text: Price" class="number"></td>
        <td data-bind="text: Value" class="number"></td>
      </tr>
    </tbody>
  </table>
</div>

<script type="text/javascript">
  $(function() {
    var masterViewModel = null;
    var childViewModel = null;

    $.getJSON($.BASE_URL + "Acquisitions/GetAcquisitions")
      .done(function(data) {
        masterViewModel = ko.mapping.fromJS({ acquisitions: data });

        ko.applyBindings(masterViewModel, $('#acquisitions')[0]);
      });

    JTable.Setup();

    $('#acquisitions').selectable({
      filter: 'tbody tr',
      selected: function(e, ui) {
        var id = $(ui.selected).data('id');

        $('#acquisitionId').text(id);
        $.getJSON($.BASE_URL + "Acquisitions/GetAcquisitionItems", { id: id })
          .done(function(data) {
            if (childViewModel != null)
              ko.mapping.fromJS({ acquisitionItems: data }, childViewModel);
            else {
              childViewModel = ko.mapping.fromJS({ acquisitionItems: data });
              ko.applyBindings(childViewModel, $('#acquisition_items')[0]);
            }
          });
      }
    });
  })
</script>